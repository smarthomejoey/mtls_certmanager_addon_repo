{
  "name": "mTLS Cert Manager",
  "version": "1.0.0",
  "slug": "mtls_certmanager",
  "description": "Add-on zur Verwaltung von mTLS Client-Zertifikaten mit PKCS#12 Export",
  "arch": ["armv7", "armhf", "aarch64", "amd64", "i386"],
  "startup": "application",
  "boot": "auto",
  "options": {
    "sync_enabled": true,
    "ssh_host": "192.168.1.100",
    "ssh_user": "user",
    "ssh_pass": "password",
    "ssh_port": 22,
    "remote_ca_path": "/etc/nginx/certs/ca.crt",
    "remote_crl_path": "/etc/nginx/certs/crl.pem"
  },
  "schema": {
    "sync_enabled": "bool",
    "ssh_host": "str",
    "ssh_user": "str",
    "ssh_pass": "str",
    "ssh_port": "int",
    "remote_ca_path": "str",
    "remote_crl_path": "str"
  }
}
